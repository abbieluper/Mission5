@*View Movie Collection Page*@

@{
    ViewData["Title"] = "View Movie Collection";
    ViewData["Header"] = "Movie Collection";
}


@model List<MovieModel>

<br />

<table class="table table-bordered table-striped" style="background-color:white" ;>

    <thead class="font-weight-bold" style="background-color: #ccd2de; color: white;">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model) // this Model is using the type that we defined earlier (we defined @model earlier)
        { // we could have named x anything
            <tr>
                <td>@x.Category.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.Lent</td>
                <td>@x.Notes</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieId">Delete</a></td>
            </tr>
        }

    </tbody>

</table>

